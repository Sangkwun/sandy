{
  "version": "2.1",
  "metadata": {
    "name": "click-element",
    "description": "Micro-pattern: Take snapshot and click an element"
  },
  "variables": {
    "ELEMENT_UID": ""
  },
  "steps": [
    {
      "step": 1,
      "id": "snapshot",
      "tool": "mcp__chrome-devtools__take_snapshot",
      "params": {},
      "output": {
        "content": "$"
      },
      "description": "Take page snapshot to get element UIDs"
    },
    {
      "step": 2,
      "id": "click",
      "tool": "mcp__chrome-devtools__click",
      "params": {
        "uid": "{{ELEMENT_UID}}"
      },
      "description": "Click the target element"
    }
  ]
}
